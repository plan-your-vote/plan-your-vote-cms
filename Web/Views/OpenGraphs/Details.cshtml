@model Web.Models.OpenGraph
@using Microsoft.Extensions.Localization
@using Web
@inject IStringLocalizer<SharedResource> Localizer
@{
    ViewData["Title"] = Localizer["openGraphs_details_title"];
}

<h1>@ViewData["Title"]</h1>

<div>
    <h4>@Localizer["openGraphs_subtitle"]</h4>
    <hr />
    <dl class="row panel panel-default">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Title)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Title)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.URL)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.URL)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Image)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Image)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Determiner)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Determiner)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Locale)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Locale)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.SiteName)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.SiteName)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OpenGraphId">@Localizer["editButton"]</a> |
    <a asp-action="Index">@Localizer["backButton"]</a>
</div>
