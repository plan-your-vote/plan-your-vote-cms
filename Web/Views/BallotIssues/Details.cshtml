@model PlanYourVoteLibrary2.BallotIssue
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Question Details"];
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BallotIssueTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueOptions)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var op in Model.BallotIssueOptions)
                {
                    <li>
                        @op.IssueOptionInfo
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BallotIssueId">@Localizer["Edit"]</a> |
    <a class="btn btn-primary" asp-action="Index">@Localizer["Back to List"]</a>
</div>
