@model IEnumerable<Web.Models.Step>
@using  Microsoft.AspNetCore.Mvc.Localization
@using Microsoft.Extensions.Localization
@using Web
@inject IStringLocalizer<SharedResource> Localizer

@{
    ViewData["Title"] = @Localizer["steps_index_title"];
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">@Localizer["createNewButton"]</a>
</p>
<table class="table panel panel-default">
    <thead>
        <tr>
            <th class="col-md-1">
                @Html.DisplayNameFor(model => model.StepNumber)
            </th>
            <th class="col-md-3">
                @Html.DisplayNameFor(model => model.StepTitle)
            </th>
            <th class="col-md-6">
                @Html.DisplayNameFor(model => model.StepDescription)
            </th>
            <th class="col-md-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.StepNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StepTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StepDescription)
                </td>
                <td class="button-group">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.ID">@Localizer["editButton"]</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.ID">@Localizer["detailButton"]</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.ID">@Localizer["deleteButton"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
