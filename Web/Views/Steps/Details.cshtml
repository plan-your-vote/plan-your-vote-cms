@model PlanYourVoteLibrary2.Step
@using  Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer Localizer

@{
    ViewData["Title"] = @Localizer["Step Details"];
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepDescription)
        </dd>
    </dl>
</div> 

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">@Localizer["Edit"]</a> |
    <a class="btn btn-primary" asp-action="Index">@Localizer["Back to List"]</a>
</div>
