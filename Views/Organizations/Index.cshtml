@model IEnumerable<Web.Models.Organization>
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("organizations_index_title");
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("organizations_index_create")</a>
</p>
<div class="table-responsive-sm">
    <table class="table panel panel-default">
        <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="button-group">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.OrganizationId">@SharedLocalizer.GetLocalizedHtmlString("editButton")</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.OrganizationId">@SharedLocalizer.GetLocalizedHtmlString("detailButton")</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.OrganizationId">@SharedLocalizer.GetLocalizedHtmlString("deleteButton")</a>
                </td>
            </tr>
        }
        </tbody>
    </table>
</div>