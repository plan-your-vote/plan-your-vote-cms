@model Web.Models.Organization
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("organizations_delete_title");
}

<h1>@ViewData["Title"]</h1>

<h3>@SharedLocalizer.GetLocalizedHtmlString("deleteWarning")</h3>
<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
    </dl>

    <form asp-action="Delete">
        <p class="text-danger">@ViewData["CandidatesFoundError"]</p>
        <input type="hidden" asp-for="OrganizationId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("backButton")</a>
    </form>
</div>
