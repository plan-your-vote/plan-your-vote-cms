@model Web.Models.Step
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("steps_delete_title");
}

<h1>@ViewData["Title"]</h1>

<h3>@SharedLocalizer.GetLocalizedHtmlString("Are you sure you want to delete this?")</h3>
<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepDescription)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value="Delete" class="btn btn-danger" /> 
        <a class="btn btn-info" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("backButton")</a>
    </form>
</div>
