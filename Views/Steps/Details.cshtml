@model Web.Models.Step
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("steps_details_title");
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepNumber)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepNumber)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StepDescription)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StepDescription)
        </dd>
    </dl>
</div> 

<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.ID">@SharedLocalizer.GetLocalizedHtmlString("editButton")</a> 
    <a class="btn btn-info" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("backButton")</a>
</div>
