@model Web.Models.SocialMedia
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("socialMedia_delete_title");
}

<h1>@ViewData["Title"]</h1>

<h3>@SharedLocalizer.GetLocalizedHtmlString("socialMedia_delete_warning")</h3>
<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.MediaName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.MediaName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Message)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Message)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Link)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Link)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="ID" />
        <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("deleteButton") class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("backButton")</a>
    </form>
</div>
