@model Web.Models.BallotIssue
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("ballotIssues_details_title");
}

<h1>@ViewData["Title"]</h1>

<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BallotIssueTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueOptions)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var op in Model.BallotIssueOptions)
                {
                    <li>
                        @op.IssueOptionInfo
                    </li>
                }
            </ul>
        </dd>
    </dl>
</div>
<div>
    <a class="btn btn-primary" asp-action="Edit" asp-route-id="@Model.BallotIssueId">@SharedLocalizer.GetLocalizedHtmlString("editButton")</a> 
    <a class="btn btn-info" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("backButton")</a>
</div>
