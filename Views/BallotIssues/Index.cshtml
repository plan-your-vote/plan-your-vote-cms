@model IEnumerable<Web.Models.BallotIssue>
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("ballotIssues_index_title");
}

<h1>@ViewData["Title"]</h1>

<p>
    <a class="btn btn-primary" asp-action="Create">@SharedLocalizer.GetLocalizedHtmlString("createNewButton")</a>
</p>
<table class="table panel panel-default">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BallotIssueTitle)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th class="col-sm-2"></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.BallotIssueTitle)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td class="button-group">
                    <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.BallotIssueId">@SharedLocalizer.GetLocalizedHtmlString("editButton")</a>
                    <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.BallotIssueId">@SharedLocalizer.GetLocalizedHtmlString("detailButton")</a>
                    <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.BallotIssueId">@SharedLocalizer.GetLocalizedHtmlString("deleteButton")</a>
                </td>
            </tr>
        }
    </tbody>
</table>
