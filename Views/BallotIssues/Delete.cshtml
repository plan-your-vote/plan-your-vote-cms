@model Web.Models.BallotIssue
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("ballotIssues_delete_title");
}

<h1>@ViewData["Title"]</h1>

<h3>@SharedLocalizer.GetLocalizedHtmlString("deleteWarning")</h3>
<div class="panel panel-default">
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueTitle)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BallotIssueTitle)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BallotIssueOptions)
        </dt>
        <dd class="col-sm-10">
            <ul>
                @foreach (var op in Model.BallotIssueOptions)
                {
                    <li>
                        @op.IssueOptionInfo
                    </li>
                }
            </ul>
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="BallotIssueId" />
        <input type="submit" value=@SharedLocalizer.GetLocalizedHtmlString("deleteButton") class="btn btn-danger" />
        <a class="btn btn-info" asp-action="Index">@SharedLocalizer.GetLocalizedHtmlString("backButton")</a>
    </form>
</div>
