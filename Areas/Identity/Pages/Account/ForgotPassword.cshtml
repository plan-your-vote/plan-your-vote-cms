@page
@model ForgotPasswordModel
@inject LocService SharedLocalizer

@{
    ViewData["Title"] = @SharedLocalizer.GetLocalizedHtmlString("Forgot your password?");
}

<h1>@ViewData["Title"]</h1>
<h4>@SharedLocalizer.GetLocalizedHtmlString("Enter your email.")</h4>
<hr />
<div class="row">
    <div class="col-md-4 panel panel-default">
        <form method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email">@SharedLocalizer.GetLocalizedHtmlString("Email")</label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">@SharedLocalizer.GetLocalizedHtmlString("Submit")</button>
        </form>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
